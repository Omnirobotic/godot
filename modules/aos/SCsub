Import('env')


env.add_source_files(env.modules_sources, "*.cpp") # Add all cpp files to the build
env.add_source_files(env.modules_sources, "scene/*.cpp") # Add all cpp files to the build
env.Append(CPPPATH=['include']) # this is a path relative to /modules/tts/

env.Append(LIBS=File('Lib/scene.lib'))
env.Append(LIBS=File('Lib/document.lib'))
env.Append(LIBS=File('Lib/Omni.Geometry.Mesh.lib'))
env.Append(LIBS=File('Lib/database_manager.lib'))

env.Append(CXXFLAGS=['/std:c++17']) # Flags for C++ code only